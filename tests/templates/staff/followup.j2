{% include "layout/staff/head.j2" %}
{% include "layout/staff/header.j2" %}
{% include "layout/staff/aside.j2" %}
<script src="{{ url_for('static', filename='assets/staff/komen.js') }}"></script>

<div class="page-wrapper">
    {# {% set y = namespace(value=0) %} #}

{# {% for satu_suratmasuk in data_suratmasuk %} #}

    {% for satu_tindaklanjut in data_tindaklanjut %}
                     {# {% if y.value == 0 %} #}

    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor"><i class="ti-email"></i> {{ title }} </h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('staff.dashboardstaff') }}"> {{ breadcrumb }} </a></li>
                <li class="breadcrumb-item"><a href="{{ url_for('staff.tindaklanjutstaff') }}">
                        {{ breadcrumb_nonactive }} </a></li>
                {# <li class="breadcrumb-item"><a href="/staff/detailtindaklanjutstaff/{{ satu_suratmasuk["id"] }}">
                        {{ breadcrumb_active }} </a></li> #}
                <li class="breadcrumb-item"><a href="/staff/isi-tindaklanjutstaff/{{ satu_tindaklanjut["id"] }}">
                        {{ breadcrumb_activated }} </a></li>
                <li class="breadcrumb-item active"><a href="/staff/followup/{{ satu_tindaklanjut["id"] }}">
                        {{ breadcrumb_aktif }} </a></li>
            </ol>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">

        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="row">
                        <div class="col-xlg-12 col-lg-12 col-md-12">
                            <form class="m-t-10" novalidate action="{{ url_for('followup.followup_tambahstaff') }}"
                                method="POST" enctype="multipart/form-data">

                                <div class="card-body">

                                    <div class="col-lg-12">
                                        <h4 class="card-title">Tambahkan Tindaklanjut :</h4>
                                        <div class="form-group">
                                            <textarea id="komentar" name="isi_followup" class="form-control"
                                                rows="15"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <h5><i class="ti-link"></i>Lampiran :</h5>
                                            <div class="controls">
                                                <input id="komentar_lampiran" type="file" name="file_followup"
                                                    class="form-control" multiple>
                                            </div>
                                        </div>
                                    </div>

                                    <input id="id_pengaduan" type="text" name="tindaklanjut" class="form-control" hidden value="{{satu_tindaklanjut['id']}}">

                                    <div class="text-xs-right">
                                        <button type="submit"
                                            class="btn btn-info m-t-20 float-right"><i class="fa fa-envelope-o"></i>
                                            Kirim</button>
                                        <a class="btn btn-danger m-t-20"
                                            href="/staff/isi-tindaklanjutstaff/{{ satu_tindaklanjut["id"] }}"><i
                                                class="fa fa-times"></i> Batal</a>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->

</div>
{# {% set y.value = y.value + 1 %} #}
                  {# {% endif %} #}
    {% endfor %}
    {# {% endfor %} #}

