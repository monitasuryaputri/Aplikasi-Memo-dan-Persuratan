                        <!-- To do list widgets -->
                        <!-- ============================================================== -->
                        <div class="to-do-widget m-t-20">
                            <!-- modal for add task -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Tambah Tugas</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                                        </div>
                                        <div class="modal-body">
                                            <form>
                                                <div class="form-group">
                                                    <label>Tugas</label>
                                                    <input type="text" class="form-control" placeholder="Enter Task Name">
                                                </div>
                                                <div class="form-group">
                                                    <label>Penanggung Jawab</label>
                                                    <select class="custom-select form-control pull-right">
                                                        <option selected="">Ka. Bid Umum</option>
                                                        <option value="1">Ka. Bid Penjaminan Mutu</option>
                                                        <option value="2">Staff Bagian Umum</option>
                                                        <option value="3">Staff Bagian Penjaminan Mutu</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Tenggat Waktu</label>
                                                    <div class='input-group date' id='datetimepicker1'>
                                                        <input type='text' class="form-control" />
                                                        <span class="input-group-addon">
                                                            <span class="glyphicon glyphicon-calendar"></span>
                                                        </span>
                                                    </div>
                                                    </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-success" data-dismiss="modal">Submit</button>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <!-- /.modal -->
                            <ul class="list-task todo-list list-group m-b-0" data-role="tasklist">
