{% include "layout/kepalaupt/head.j2" %}
{% include "layout/kepalaupt/header.j2" %}
{% include "layout/kepalaupt/aside.j2" %}

<div class="page-wrapper">
    {% for satu_tindaklanjut in data_tindaklanjut %}

    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor"><i class="ti-email"></i> {{ title }} </h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ url_for('kepalaupt.dashboardka') }}"> {{ breadcrumb }} </a></li>
                <li class="breadcrumb-item"><a href="{{ url_for('kepalaupt.tindaklanjut') }}">
                        {{ breadcrumb_nonactive }} </a></li>
                <li class="breadcrumb-item"><a href="/kepalaupt/detailtindaklanjut/{{ satu_tindaklanjut["suratmasuk"] }}">
                        {{ breadcrumb_active }} </a></li>
                <li class="breadcrumb-item active"><a href="/kepalaupt/isi-tindaklanjutka/{{ satu_tindaklanjut["id"] }}">
                        {{ breadcrumb_activated }} </a></li>
            </ol>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">

        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="row">

                        <div class="col-xlg-12 col-lg-12 col-md-12">

                            <div class="card-body">

                                <div class="card b-all shadow-none">

                                    <div class="card-body">
                                        <div class="float-sm-right">
                                        </div>
                                        <h3 class="card-title m-b-0">Detail Tugas</h3>
                                    </div>
                                    <div>
                                        <hr class="m-t-0">
                                    </div>
                                    <form class="m-t-10" novalidate action="/kepalaupt/isi-tindaklanjutka/simpan/{{satu_tindaklanjut["id"]}}"
                                        method="POST" enctype="multipart/form-data">
                                    <div id="id_penindak" class="card-body">
                                        <div id="education_fields"></div>

                                        <div class="form-group">
                                            <h4>Tenggat Waktu Tindaklanjut : </h4>
                                            <div class="controls">
                                                <input type="text" id="deadline" class="date-picker form-control" 
                                                    name="tenggatwaktu" value="{{satu_tindaklanjut["tenggatwaktu"]}}"
                                                    onfocus="type='date'" onclick="type='date'" onblur="type='date'">
                                                
                                        </div>
                                        
                                    </div>

                                    <div class="text-xs-right">
                                        <input type="submit" class="btn btn-info m-t-20 float-right" name="btnSimpan"
                                            value="Simpan">
                                        <a class="btn btn-danger m-t-20" href="/kepalaupt/isi-tindaklanjutka/{{satu_tindaklanjut["id"]}}"><i class="fa fa-times"></i>
                                            Batal</a>
                                    </div>
                                    </form>
                                    
                                    
                                </div>
                                

                            </div>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Page Content -->
    <!-- ============================================================== -->

</div>
{% endfor %}

<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
    {% include "layout/kepalaupt/footer.j2" %}
<!-- end extends halaman content -->