<!-- extends halaman content -->
{% extends "layout/login/content.j2" %}
{% block main %}

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    {% with messages = get_flashed_messages() %}
    {% if messages %}
    {% for message in messages %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span>{{ message }}</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
    {% endif %}
    {% endwith %}
    <section id="wrapper">
        <div class="login-register"
            style="background-image:url({{ url_for('static', filename='images/labterpadu.jpg') }});">
            <div class="login-box card">
                <div class="card-body">
                    <form class="form-horizontal form-material" id="loginform" action="" method="post">
                        <div class="form-group">
                            <div class="col-xs-12 text-center">
                                <div class="user-thumb text-center"> <img alt="thumbnail" width="100"
                                        src="{{ url_for('static', filename='images/unsyiah.png') }}">
                                                                        
                                    <h3><b>Memo dan Persuratan</b></h3>
                                    <h3>UPT Laboratorium Terpadu</h3>
                                    <h4>Universitas Syiah Kuala</h4>
                                </div>
                            </div>
                        </div>

                        <div class="text-center m-t-20">
                            <div class="col-xs-12">
                                <div class="btn-group">
                                    <a href="/login" type="button"
                                        class="btn btn-themecolor btn-lg btn-block text-uppercase waves-effect waves-light"
                                        aria-haspopup="true" aria-expanded="false">
                                        LOGIN
                                    </a>

                                </div>

                            </div>
                        </div>

                        

                    </form>
                    <div class="text-center m-t-20">
                        <br>
                        <a href="https://drive.google.com/file/d/1mtmGuCuDqchzyVAv7_M1b4WWqBwrigW6/view?usp=sharing" type="button"
                            class="btn btn-themecolor btn-rounded waves-effect waves-light"
                            aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-file-pdf-o"></i> 
                            Panduan untuk Admin
                        </a>
                    </div>
                    <div class="text-center m-t-5">
                        <a href="https://drive.google.com/file/d/1kqeX8ryHMjTJry8g-ugcYbD6lMfNU0Ks/view?usp=sharing" type="button"
                            class="btn btn-themecolor btn-rounded waves-effect waves-light"
                            aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-file-pdf-o"></i> 
                            Panduan untuk Kepala UPT dan Staff Lab
                        </a>
                    </div>
                    {% if error %}
                    <p class="error"><strong>Error:</strong> {{ error }}
                        {% endif %}

                </div>
            </div>
        </div>
    </section>

    {% endblock %}
    <!-- end extends halaman content -->